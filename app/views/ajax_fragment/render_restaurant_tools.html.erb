<%
   jsonable_response = []
   @restaurants.each do |restaurant|
     jsonable_response << {
         :id => restaurant.id,
         :html => render(:partial => "restaurants/parts/tools",
                         :locals => {:restaurant => restaurant})}
   end
%>
(function() {
  <% jsonable_response.each do |item| %>
    var el = $('<%= "#restaurant_#{item[:id]}_tools" %>');
    el.html("<%= escape_javascript(item[:html]) %>").appear();
  <% end %>
})();
