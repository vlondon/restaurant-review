<% if !@content_text.to_s.match(/You\sare\sconnected\sthrough\sfacebook/i) %>
  <%
     content = @content_file ? escape_javascript(render(:partial => @content_file)) : @content_text
  %>
  <% if content && !content.blank? && content.length > 2 %>
    $('<%= @element %>').html("<%= content %>").<%= @effect ? @effect : 'slideDown()' %>;

    <% if @after_effects %>
      <%= @after_effects %>
    <% end %>
  <% end %>
<% end %>