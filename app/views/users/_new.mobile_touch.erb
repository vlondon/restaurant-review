<% content_for :content do %>
  <% @user.password = @user.password_confirmation = nil %>

  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path(:dialog => true) do |f| -%>
    <%= f.text_field :login, :placeholder => t('label.login') %>

    <%= f.text_field :email, :placeholder => t('label.email') %>

    <%= render :partial => 'users/parts/fields', :locals => {:f => f} %>

    <%= submit_tag t('button.signup') %>
  <% end -%>
<% end %>

