<div class="grid_12">
  <h1><%= t('subheader.signup_new_user') %></h1>
  <% @user.password = @user.password_confirmation = nil %>

  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path do |f| -%>
    <p><%= label_tag 'login', t('label.login') %><br/>
    <%= f.text_field :login %></p>

    <p><%= label_tag 'email', t('label.email') %><br/>
    <input type="email" name="user[email]" id="user_email" value="<%= @user ? @user.email : '' %>"/>

    <%= render :partial => 'users/parts/fields', :locals => {:f => f} %>

  <p><%= submit_tag t('button.signup') %></p>
  <% end -%>

</div>